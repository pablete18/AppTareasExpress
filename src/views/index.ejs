<!DOCTYPE html>
<html>
  <head>
    <title>Tus tareas</title>
<!--     <link rel="stylesheet" href="./../../public/stylesheets/style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/80f37fa8b2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="body__div">
      <h1>Tus tareas</h1>
      <h3>Organiza tus tareas en esta plataforma</h3>
      <div class="container tex-center">
        <div class = "row align-items-start">
    <!-- Button trigger modal -->
<button type="button" class="col-md-4 btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
 Agregar Tarea
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar tarea</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/home" method="POST">
        <div class="modal-body">        
          <input type="text"name="name" id="name"placeholder = "Escribi aca tu nueva tarea">
          <select name="status"id="status">
            <option value="" selected hidden>Seleccione estado...</option>
          <% statuses.forEach(status => { %>            
                <option value="<%= status.id %>"><%= status.name %></option>           
          <% }) %>
          </select>
         </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
    </div>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      
      <th scope="col">#</th>
      <% statuses.forEach(status => { %>
        <th scope="col"><%= status.name %>
        </th>
      <% }) %>
      
      
    </tr>
  </thead>
  <tbody>
    <tr>
        <% taskes.forEach(task => { %>
        <th scope="row">1</th>
        <td><%= task.name %></td>
      <% }) %>       
      
    </tr>
   
  </tbody>
</table>
                   
           
            
          
         
          </div>
        
        </div>
        
          
      </div>
     
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  </body>
</html>
